<?xml version="1.0"?>
<layer-spec xmlns="urn:jboss:galleon:layer-spec:1.0" name="informix-datasource">
    <dependencies>
        <layer name="informix-driver" />
    </dependencies>
    <feature spec="subsystem.datasources.data-source">
        <param name="data-source" value="WeatherDS" />
        <param name="enabled" value="${org.wildfly.datasources.informix.enabled, env.INFORMIX_ENABLED:true}"/>
        <param name="use-java-context" value="true" /> 
        <param name="jndi-name" value="${org.wildfly.datasources.informix.jndi-name,env.INFORMIX:java:jboss/datasources/${org.wildfly.datasources.informix.datasource,env.INFORMIX_DATASOURCE:WeatherDS}}"/>
        <param name="connection-url" value="${org.wildfly.datasources.informix.connection-url,env.INFORMIX_URL:jdbc:informix-sqli://${org.wildfly.datasources.informix.host,env.INFORMIX_SERVICE_HOST,env.INFORMIX_HOST:localhost}:${org.wildfly.datasources.informix.port,env.INFORMIX_SERVICE_PORT,env.INFORMIX_PORT:9088}/${org.wildfly.datasources.informix.database,env.INFORMIX_DATABASE}}"/>
        <param name="driver-name" value="informix" /> 
        <param name="user-name" value="${org.wildfly.datasources.informix.user-name,env.INFORMIX_USER}"/>
        <param name="password" value="${org.wildfly.datasources.informix.password,env.INFORMIX_PASSWORD}"/>
    </feature>
</layer-spec>